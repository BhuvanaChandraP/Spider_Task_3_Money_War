        html,
body {
  height: 100%;
}

.mydiv {
  width:100%;
  height:100%;
  color:black;
  font-weight:bold;
  animation: animation 10s infinite;
}

@keyframes animation {
  0% {background-color: rgb(255, 147, 210);}
  25%{background-color:rgb(248, 248, 122);}
  50%{background-color:rgb(141, 255, 141);}
  75%{background-color:rgb(188, 146, 255);}
  100% {background-color: rgb(255, 119, 119);}
}
        #container{
            background-color: #e3afbc;
            /* display:flex; */
            text-align: center;
            max-width: fit-content;
            padding: 50px;
            margin: auto;
            border-radius: 6px;
            margin-top: 50px;
        }
        input{
            /* border-top: none; */
            border: none;
            padding: 8px;
            text-align: center;
            border-radius: 8px;
        }
        input:hover{
            padding: 15px;
            /* border-top: none; */
            /* border: none;
            padding: 8px;
            text-align: center;
            border-radius: 8px; */
        }
        button{
            font-size: 15px;
            padding: 8px;
            border-radius: 5px;
            border-width: 2px;
            background-color: cornsilk;
            color: black;
        }
        button:hover{
            color: rgb(15, 195, 39);
            background-color: black;
        }
    </style>
</head>
<body class="mydiv" >

    <%- include('partials/flash') %>
 <div id = "container" >
    <h1>Login</h1>
    
    <form action="/login" method="POST" >
       
        <div>
            <label class="form-label" for="username">User Name</label><br>
            <input class="form-control" type="text" id="username" name="username" placeholder="User Name" required><br>
        </div>

        <div>
            <label class="form-label" for="password">Password</label><br>
            <input class="form-control" type="password" id="password" name="password" placeholder= "Password" required><br>
        </div>
        
        <div>
            <br>
            <br>
            <button>Login</button>
        </div>
    </form>
    <h3>Don't  have a account <a href ="register">Register</a> here</h3>
 </div>
</body>
</html>