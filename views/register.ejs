<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <style>
            .mydiv {
        width:100%;
        height:100%;
        color:black;
        font-weight:bold;
        animation: animation 10s infinite;
        }

        @keyframes animation {
        0% {background-color: rgb(255, 147, 210);}
        25%{background-color:rgb(248, 248, 122);}
        50%{background-color:rgb(141, 255, 141);}
        75%{background-color:rgb(188, 146, 255);}
        100% {background-color: rgb(255, 119, 119);}
        }
        #container{
            background-color: #e3afbc;
            /* display:flex; */
            text-align: center;
            max-width: fit-content;
            padding: 50px;
            margin: auto;
            border-radius: 6px;
            margin-top: 50px;
        }
        .tot{
            /* border-top: none; */
            border: none;
            /* padding: 8px; */
            padding-left: 50px;
            padding-right: 50px;
            padding-top: 8px;
            padding-bottom: 8px;
            text-align: center;
            border-radius: 8px;
          
        }
        .tot:hover{
            padding: 15px;
            width: 250px;
            
        }
        
        button{
            font-size: 15px;
            padding: 8px;
            border-radius: 5px;
            border-width: 2px;
            background-color: cornsilk;
            color: black;
        }
        button:hover{
            color: rgb(35, 211, 44);
            background-color: black;
        }
    </style>
</head>
<body   class="mydiv">
   
  
    <%- include('partials/flash') %>   
 <div id = "container">
    <h1>Register</h1>
    
    <form action="/register" method="POST" >
        <div id = "email">
            <label  for="email">Email</label><br>
            <input  type="email" id="email" name="email" class = "tot" placeholder="Email" required>
        </div>
        <div id = "name">
            <label  for="username">User Name</label><br>
            <input  type="text" id="username" name="username" class = "tot" placeholder="User Name" required>
        </div>

        <div id = "pass">
            <label  for="password">Password</label><br>
            <input  type="password" id="password" name="password" placeholder= "Password" class = "tot"  minlength="6" required  onkeyup="CheckPasswordStrength(this.value)"><br>
            <label>Password Strength: </label><strong id="password_strength"></strong>
        </div>
        <div id = "type"  >
            User Type :<br>
            <input type="radio" id="byer" name="type" value="byer" required>Buyer &nbsp&nbsp&nbsp
            <input type="radio" id="seller" name="type" value="seller">Seller<br>
        </div>
        
        <div>
            <br>
            <button>Register</button>
        </div>
    </form>
    <h3>Already have a account <a href ="login">login</a> here</h3>
 </div>
    <script>
        function CheckPasswordStrength(password) {
var password_strength = document.getElementById("password_strength");

       
        if (password.length == 0) {
            password_strength.innerHTML = "";
            return;
        }

        
        var regex = new Array();
        regex.push("[A-Z]"); 
        regex.push("[a-z]"); 
        regex.push("[0-9]"); 
        regex.push("[$@$!%*#?&]"); 

        var passed = 0;

        //Validate for each Regular Expression.
        for (var i = 0; i < regex.length; i++) {
            if (new RegExp(regex[i]).test(password)) {
                passed++;
            }
        }

        
        var color = "";
        var strength = "";
        switch (passed) {
            case 0:
            case 1:
            case 2:
                strength = "Weak";
                color = "red";
                break;
            case 3:
                 strength = "Medium";
                color = "orange";
                break;
            case 4:
                 strength = "Strong";
                color = "green";
                break;
               
        }
        password_strength.innerHTML = strength;
        password_strength.style.color = color;



     }
    </script>
   
</body>
</html>